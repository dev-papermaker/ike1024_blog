<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Create a New Memo!</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/memos" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="memo_title"
            placeholder="memo_title"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="memo_description"
            placeholder="memo_description"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="memo_topic"
            placeholder="memo_topic"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/memos">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
